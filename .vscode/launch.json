{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WebApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildWebApi",
            "program": "${workspaceRoot}/GoldenTicket.WebApi/bin/Debug/netcoreapp2.0/GoldenTicket.WebApi.dll",
            "cwd": "${workspaceRoot}/GoldenTicket.WebApi",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Website",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildWebsite",
            "program": "${workspaceRoot}/GoldenTicket.Website/bin/Debug/netcoreapp2.0/GoldenTicket.Website.dll",
            "cwd": "${workspaceRoot}/GoldenTicket.Website",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ],
    "compounds": []
}